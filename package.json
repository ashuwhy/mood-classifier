{
  "name": "Mood Classifier",
  "version": "1.0.0",
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "build": "electron-packager . \"Mood Classifier\" --platform=darwin --arch=arm64 --asar --icon='icon/icon.icns' --overwrite --asar-unpack=\"node_modules/ffmpeg-static/**/*\" --ignore=\"node_modules/ffmpeg-static/!(ffmpeg-darwin-arm64)\""
  },
  "dependencies": {
    "@distube/ytdl-core": "^4.15.9",
    "axios": "^1.7.7",
    "canvas": "^2.11.2",
    "colorthief": "^2.6.0",
    "dotenv": "^16.4.5",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "genius-lyrics": "^4.4.7",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@electron/packager": "^18.3.5",
    "electron": "^25.3.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.moodclassifier.app",
    "productName": "Mood Classifier",
    "asar": true,
    "asarUnpack": [
      "node_modules/ffmpeg-static/**/*"
    ],
    "mac": {
      "target": "dmg",
      "arch": [
        "arm64"
      ]
    },
    "extraResources": [
      {
        "from": "/opt/homebrew/bin/ffmpeg",
        "to": "ffmpeg"
      }
    ],
    "files": [
      "**/*",
      "node_modules/ffmpeg-static/**/*"
    ]
  }
}
