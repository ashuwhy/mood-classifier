{
  "name": "mood-classifier",
  "version": "1.0.5",
  "description": "An application that gives BPM and Key of a song and classifies the mood of songs",
  "author": {
    "name": "Ashutosh Sharma",
    "email": "ashutoshsharmawhy@gmail.com",
    "url": "https://github.com/ashuwhy"
  },
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "build": "electron-builder build --mac --win --linux -c.mac.identity=null",
    "build:mac": "electron-builder build --mac -c.mac.identity=null",
    "build:win": "electron-builder build --win",
    "build:linux": "electron-builder build --linux"
  },
  "dependencies": {
    "@distube/ytdl-core": "^4.15.9",
    "axios": "^1.7.7",
    "canvas": "^2.11.2",
    "colorthief": "^2.6.0",
    "dotenv": "^16.4.5",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "genius-lyrics": "^4.4.7",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "electron": "^25.3.0",
    "electron-builder": "^24.9.1",
    "nsisEnvVar": "^1.0.0"
  },
  "build": {
    "appId": "com.moodclassifier.app",
    "productName": "Mood Classifier",
    "asar": true,
    "asarUnpack": [
      "node_modules/ffmpeg-static/**/*"
    ],
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!**/.git*",
      "!**/.eslintrc*",
      "!**/nodemon.json",
      "!**/.prettier*",
      "!**/webpack.config.js",
      "!**/babel.config.js",
      "!**/tsconfig.json",
      "!**/.env*",
      "!**/jest.config.js",
      "!**/.vscode/**",
      "!**/coverage/**",
      "!**/.nyc_output/**",
      "!**/docs/**",
      "!**/test/**",
      "!**/__tests__/**",
      "!**/dist/**",
      "!**/build/{background.png,installer.nsh,entitlements.mac.plist}",
      "!node_modules/ffmpeg-static/{node_modules,docs,test}/**"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.music",
      "icon": "icon/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 400
      },
      "background": "build/background.png",
      "iconSize": 80,
      "iconTextSize": 12,
      "title": "Install Mood Classifier"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "portable",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "icon/icon.ico",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "signAndEditExecutable": true
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Mood Classifier",
      "include": "build/installer.nsh",
      "perMachine": true,
      "installerIcon": "icon/icon.ico",
      "uninstallerIcon": "icon/icon.ico",
      "installerHeaderIcon": "icon/icon.ico",
      "menuCategory": true,
      "displayLanguageSelector": true,
      "deleteAppDataOnUninstall": true,
      "packElevateHelper": true
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "Audio",
      "icon": "icon/icon.png",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "extraResources": [
      {
        "from": "build/extraResources/",
        "to": ".",
        "filter": ["**/*"]
      }
    ]
  }
}
